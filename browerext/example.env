# ThreadMirror Browser Extension Environment Variables
# Copy this file to .env.local and modify the values as needed

# ===========================================
# Auth0 Configuration
# ===========================================

# Auth0 domain (required)
VITE_AUTH0_DOMAIN=your-domain.auth0.com

# Auth0 client ID (required)
VITE_AUTH0_CLIENT_ID=your-auth0-client-id

# Auth0 audience/API identifier (optional)
VITE_AUTH0_AUDIENCE=https://your-api.com

# ===========================================
# Backend API Configuration
# ===========================================

# Backend API base URL (default: http://localhost:8080)
VITE_API_BASE_URL=http://localhost:8080

# API version (default: v1)
VITE_API_VERSION=v1

# ===========================================
# Development Configuration
# ===========================================

# Environment mode (development/production)
NODE_ENV=development

# Extension ID for development (auto-generated in dev mode)
# VITE_EXTENSION_ID=your-extension-id

# ===========================================
# Optional Configuration
# ===========================================

# Custom redirect URI for Auth0 (auto-generated if not provided)
# VITE_AUTH0_REDIRECT_URI=https://your-extension-id.chromiumapp.org/

# Connection timeout in milliseconds (default: 10000)
VITE_API_TIMEOUT=10000 
